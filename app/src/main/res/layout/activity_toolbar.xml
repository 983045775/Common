<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.llf.common.MainActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/toolbar_bg"
        toolbar:navigationIcon="@drawable/ic_arrow_back_white_24dp"
        toolbar:title="歌单"
        toolbar:titleTextAppearance="@style/ToolbarTitle"
        toolbar:subtitle="感谢这些音乐带给双耳的迷离享受"
        toolbar:subtitleTextAppearance="@style/ToolbarSubTitle"
        android:theme="@style/ToolbarTheme"
        toolbar:popupTheme="@style/OverflowMenuStyle"
        />
</RelativeLayout>
